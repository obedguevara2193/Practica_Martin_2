//Validar contraseÃ±a en C 

#include<stdio.h> 
#include<ctype.h> 

int main(){ 


int mayus=0, minus=0, num=0; 
char a; 
do{ 

a=getchar(); 
if(isupper(a)) 
mayus++; 
else if(islower(a)) 
minus++; 
else if(isdigit(a)) 
num++; 
}while(!iscntrl(a)); 
printf(" contraseÃ±a correcta%d %d %dn", num, minus, mayus); 
return 0; 
} 
